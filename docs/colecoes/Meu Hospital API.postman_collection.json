				{
					"name": "1.2 - [PUBLIC] Login e Obter JWT",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Salva o token JWT na variável de ambiente para uso futuro",
									"const responseJson = pm.response.json();",
									"if (responseJson.token) {",
									"    pm.environment.set(\"bearerToken\", responseJson.token);",
									"    console.log(\"Token JWT salvo com sucesso.\");",
									"} else {",
									"console.log(\"Login falhou ou token não encontrado.\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
